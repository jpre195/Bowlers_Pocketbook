<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintWidth_default="percent"
    app:layout_constraintWidth_percent=".9"
    tools:context=".BuildArsenalPreferencesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:orientation="horizontal"
            app:rowCount="4"
            tools:ignore="MissingClass">

            <TextView
                android:id="@+id/playStyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:lines="2"
                android:singleLine="false"
                android:text="Please select \nyour play style:"
                android:textSize="14sp"
                app:layout_column="0"
                app:layout_row="0" />

            <Spinner
                android:id="@+id/playStyleSpinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/releasePositionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="30dp"
                android:text="Preferred release \nposition:"
                android:singleLine="false"
                app:layout_column="0"
                app:layout_row="1" />

            <Spinner
                android:id="@+id/releasePositionSpinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/rateBrandsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="30dp"
                android:text="Please rate the following \nbrands out of 5"
                android:singleLine="false"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                android:id="@+id/nineHundredGlobalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="30dp"
                android:text="900 Global:"
                android:singleLine="false"
                app:layout_column="0"
                app:layout_row="3" />

            <SeekBar
                android:id="@+id/seekBar"
                android:max="100"
                android:progress="50"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                app:layout_column="1"
                app:layout_row="3"/>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>