<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/main_background"
            android:gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/buildArsenalBtn"
                    android:layout_width="175dp"
                    android:layout_height="150dp"
                    android:text="Build \nArsenal"
                    android:textSize="16sp"
                    android:background="@drawable/button_design"
                    android:textColor="#000000"
                    android:layout_margin="12dp"/>

                <Button
                    android:id="@+id/findABallBtn"
                    android:layout_width="175dp"
                    android:layout_height="150dp"
                    android:text="Find a \nBall"
                    android:background="@drawable/button_design"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_margin="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/logScoresBtn"
                    android:layout_width="175dp"
                    android:layout_height="150dp"
                    android:text="Log \nScores"
                    android:background="@drawable/button_design"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_margin="12dp"/>

                <Button
                    android:id="@+id/analyzeScoresBtn"
                    android:layout_width="175dp"
                    android:layout_height="150dp"
                    android:text="Analyze \nScores"
                    android:background="@drawable/button_design"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_margin="12dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>