<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogScoresActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="4"
        app:columnCount="2"
        app:orientation="horizontal">

        <TextView
            android:id="@+id/eventTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:singleLine="false"
            android:text="Please select \n the event type:"
            android:textSize="14sp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="0" />

        <Spinner
            android:id="@+id/eventTypeSpinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/ballUsedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Ball used:"
            app:layout_column="0"
            app:layout_row="1" />

        <EditText
            android:id="@+id/ballUsedEditText"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="text"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Record Score:"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/scoreEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/gameNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Game number:"
            app:layout_column="0"
            app:layout_row="3" />

        <EditText
            android:id="@+id/gameNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="1"
            android:inputType="number"
            app:layout_column="1"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

    <ListView
        android:id="@+id/scoresListView"
        android:layout_width="402dp"
        android:layout_height="212dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logScoresBtn" />

    <Button
        android:id="@+id/logScoresBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="Log Score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>